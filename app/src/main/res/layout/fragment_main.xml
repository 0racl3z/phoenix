<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.motion.widget.MotionLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_motion_main"
    tools:context=".main.MainFragment">

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/payment_list"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/top_section"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      app:layout_constrainedHeight="true"
      android:clipToPadding="false"
      android:overScrollMode="never"
      android:paddingBottom="88dp" />

    <View
      android:id="@+id/top_limiter"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      app:layout_constraintBottom_toBottomOf="@id/top_section"
      android:background="@color/main_top_limiter"
      android:backgroundTintMode="screen" />

    <View
      android:id="@+id/top_section"
      android:layout_width="0dp"
      android:layout_height="@dimen/balance_default_height"
      android:fitsSystemWindows="true" />

    <fr.acinq.eclair.phoenix.utils.customviews.CoinView
      android:id="@+id/balance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constrainedWidth="true"
      app:amount_size="48sp"
      app:unit_color="@color/primary_muted"
      app:unit_size="20sp" />

    <View
      android:layout_width="match_parent"
      android:layout_height="200dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:background="@drawable/app_bg_shade" />

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/buttons_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:background="@color/white"
      android:elevation="16dp">

      <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintEnd_toStartOf="@id/receive_button"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button_bg_square"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:icon="@drawable/ic_settings_20dp" />

      <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_sm"
        android:layout_marginBottom="@dimen/space_sm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/receive_button"
        app:layout_constraintStart_toEndOf="@id/settings_button"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/grey_light_3" />

      <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
        android:id="@+id/receive_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/send_button"
        app:layout_constraintStart_toEndOf="@id/settings_button"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button_bg_square"
        app:icon="@drawable/ic_receive_20dp"
        app:text="@string/menu_receive"
        app:text_color="@color/dark"
        app:text_size="@dimen/text_lg" />

      <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_sm"
        android:layout_marginBottom="@dimen/space_sm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/send_button"
        app:layout_constraintStart_toEndOf="@id/receive_button"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/grey_light_3" />

      <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
        android:id="@+id/send_button"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/receive_button"
        app:layout_constraintTop_toTopOf="parent"
        app:icon="@drawable/ic_send_20dp"
        android:background="@drawable/button_bg_square"
        app:text="@string/menu_send"
        app:text_color="@color/dark"
        app:text_size="@dimen/text_lg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>
