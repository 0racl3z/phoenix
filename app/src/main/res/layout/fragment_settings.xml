<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/defaultMutedBackgroundColor"
    tools:context=".settings.SettingsFragment">

    <fr.acinq.eclair.phoenix.utils.customviews.ActionBarView
      android:id="@+id/action_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:text="@string/menu_settings" />

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@+id/action_bar"
      android:background="?attr/defaultBackgroundColor"
      android:fillViewport="true">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.helper.widget.Flow
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0"
          android:orientation="vertical"
          app:constraint_referenced_ids="general_title, close_channels_button, display_seed_button, advanced_title, list_all_channels_button, logs_button"
          app:flow_verticalStyle="packed"
          app:flow_wrapMode="none" />

        <TextView
          android:id="@+id/general_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingStart="@dimen/space_md_p"
          android:paddingTop="@dimen/space_md_p"
          android:paddingEnd="@dimen/space_md_p"
          android:paddingBottom="@dimen/space_xs"
          android:text="@string/settings_general_title"
          android:textColor="?attr/colorPrimary"
          android:textSize="@dimen/text_sm"
          android:textStyle="bold"
          tools:ignore="MissingConstraints" />

        <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
          android:id="@+id/close_channels_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/button_bg_square_border"
          android:padding="@dimen/space_md_p"
          app:hz_bias="0"
          app:text="@string/settings_close_all_channels"
          tools:ignore="MissingConstraints" />

        <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
          android:id="@+id/display_seed_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/button_bg_square_border"
          android:padding="@dimen/space_md_p"
          app:hz_bias="0"
          app:text="@string/settings_display_seed"
          tools:ignore="MissingConstraints" />

        <TextView
          android:id="@+id/advanced_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingStart="@dimen/space_md_p"
          android:paddingTop="@dimen/space_md_p"
          android:paddingEnd="@dimen/space_md_p"
          android:paddingBottom="@dimen/space_xs"
          android:text="@string/settings_advanced_title"
          android:textColor="?attr/colorPrimary"
          android:textSize="@dimen/text_sm"
          android:textStyle="bold"
          tools:ignore="MissingConstraints" />

        <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
          android:id="@+id/list_all_channels_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/button_bg_square_border"
          android:padding="@dimen/space_md_p"
          app:hz_bias="0"
          app:text="@string/settings_list_channels"
          tools:ignore="MissingConstraints" />

        <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
          android:id="@+id/logs_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/button_bg_square"
          android:padding="@dimen/space_md_p"
          app:hz_bias="0"
          app:text="@string/settings_logs"
          tools:ignore="MissingConstraints" />

      </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
