<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="model"
      type="fr.acinq.eclair.phoenix.settings.SettingsViewModel" />
  </data>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".receive.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:constraint_referenced_ids="close_channels_button, sep1, list_all_channels"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

      <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
        android:id="@+id/close_channels_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_md"
        app:text="@string/settings_close_all_channels"
        app:text_size="@dimen/text_lg"
        tools:ignore="MissingConstraints" />

      <View
        android:id="@+id/sep1"
        style="@style/HLineSeparator"
        tools:ignore="MissingConstraints" />

      <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
        android:id="@+id/list_all_channels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_md"
        app:text="@string/settings_list_channels"
        app:text_size="@dimen/text_lg"
        tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</layout>
