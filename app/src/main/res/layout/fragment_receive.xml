<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="fr.acinq.eclair.phoenix.receive.PaymentGenerationState" />

    <variable
      name="model"
      type="fr.acinq.eclair.phoenix.receive.ReceiveViewModel" />
  </data>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constrainedHeight="true"
    android:background="?attr/defaultMutedBackgroundColor"
    android:fillViewport="true"
    android:overScrollMode="never"
    tools:context=".receive.ReceiveFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/space_md_p"
        app:layout_constraintTop_toTopOf="@id/action_bar"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="@id/invoice_params_layout"
        android:background="?attr/defaultBackgroundColor" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/mask"
        android:background="?attr/defaultButtonColor" />

      <fr.acinq.eclair.phoenix.utils.customviews.ActionBarView
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/athens"
        app:text="@string/receive_title" />

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/invoice_params_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/action_bar"
        app:layout_constrainedWidth="true"
        android:paddingStart="@dimen/space_lg"
        android:paddingTop="@dimen/space_md"
        android:paddingEnd="@dimen/space_lg">

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/amount_value_layout"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/space_xs"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/amount_unit"
          android:hint="@string/receive_amount_label"
          android:textColorHint="?attr/defaultMutedTextColor"
          app:hintAnimationEnabled="false">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amount_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textSize="@dimen/text_lg" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
          android:id="@+id/amount_unit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/space_xxs"
          app:layout_constraintBottom_toBottomOf="@id/amount_value_layout"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@drawable/spinner_bg"
          android:paddingLeft="@dimen/space_sm"
          android:paddingTop="@dimen/space_xs"
          android:paddingRight="@dimen/space_md_p"
          android:paddingBottom="@dimen/space_xs"
          android:spinnerMode="dialog" />

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/desc_value_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_sm"
          app:layout_constraintTop_toBottomOf="@id/amount_value_layout"
          android:hint="@string/receive_desc_hint"
          android:textColorHint="?attr/defaultMutedTextColor"
          app:hintAnimationEnabled="false">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/desc_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:textSize="@dimen/text_lg" />

        </com.google.android.material.textfield.TextInputLayout>

        <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
          android:id="@+id/generate_button"
          android:layout_marginTop="@dimen/space_md"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/desc_value_layout"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:visibility="@{model.state == PaymentGenerationState.INIT || model.state == PaymentGenerationState.DONE || model.state == PaymentGenerationState.ERROR}"
          app:icon="@drawable/ic_qrcode"
          app:text="@string/receive_generate_button" />

        <fr.acinq.eclair.phoenix.utils.customviews.ProgressTextView
          android:id="@+id/progress_bar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_md"
          app:layout_constraintTop_toBottomOf="@id/desc_value_layout"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:background="@drawable/rounded_border"
          android:padding="@dimen/space_sm_p"
          android:visibility="@{model.state == PaymentGenerationState.IN_PROGRESS || model.state == PaymentGenerationState.BUILDING_BITMAP}"
          app:text="@string/receive_loading_message" />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/invoice_params_layout"
        android:visibility="@{model.state == PaymentGenerationState.ERROR}"
        android:padding="@dimen/space_lg"
        android:text="@string/receive_error_message"
        android:drawableTint="?attr/defaultErrorTextColor"
        android:drawableStart="@drawable/ic_alert_triangle"
        android:textColor="?attr/defaultErrorTextColor" />

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toBottomOf="@id/invoice_params_layout"
        android:visibility="@{model.state == PaymentGenerationState.DONE}">

        <ImageView
          android:id="@+id/qr_image"
          android:layout_width="224dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/space_lg"
          android:layout_marginEnd="@dimen/space_lg"
          android:layout_marginTop="@dimen/space_lg"
          app:layout_constrainedWidth="true"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:adjustViewBounds="true"
          android:background="@drawable/rounded"
          android:clickable="true"
          android:contentDescription="@string/utils_unknown"
          android:focusable="true"
          android:padding="@dimen/space_md_p"
          android:scaleType="fitCenter"
          android:src="@drawable/qrcode_placeholder" />

        <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
          android:id="@+id/copy_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_md_p"
          app:layout_constraintEnd_toStartOf="@id/share_button"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/qr_image"
          app:layout_constraintHorizontal_chainStyle="packed"
          android:padding="@dimen/space_sm"
          app:icon="@drawable/ic_copy" />

        <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
          android:id="@+id/share_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/space_md"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/copy_button"
          app:layout_constraintTop_toTopOf="@id/copy_button"
          android:padding="@dimen/space_sm"
          app:icon="@drawable/ic_share" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/copy_button"
          android:padding="@dimen/space_lg"
          android:text="@{model.paymentRequestString}"
          android:textAlignment="center"
          android:textColor="?attr/defaultMutedTextColor"
          android:textIsSelectable="true"
          android:textSize="@dimen/text_xs" />

      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</layout>
