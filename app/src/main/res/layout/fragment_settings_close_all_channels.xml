<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="fr.acinq.eclair.phoenix.settings.ClosingChannelsState" />

    <variable
      name="model"
      type="fr.acinq.eclair.phoenix.settings.CloseAllChannelsViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?attr/defaultBackgroundColor">

    <fr.acinq.eclair.phoenix.utils.customviews.ActionBarView
      android:id="@+id/action_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:text="@string/closeall_title" />

    <fr.acinq.eclair.phoenix.utils.customviews.ProgressTextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:padding="@dimen/space_lg"
      android:visibility="@{model.state == ClosingChannelsState.CHECKING_CHANNELS}"
      app:layout_constraintTop_toBottomOf="@id/action_bar"
      app:text="@string/closeall_checking_channels" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:padding="@dimen/space_lg"
      android:text="@string/closeall_no_channels"
      android:visibility="@{model.state == ClosingChannelsState.NO_CHANNELS}"
      app:layout_constraintTop_toBottomOf="@id/action_bar" />

    <ScrollView
      android:id="@+id/scroll"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      android:overScrollMode="never"
      android:visibility="@{model.state != ClosingChannelsState.NO_CHANNELS &amp;&amp; model.state != ClosingChannelsState.CHECKING_CHANNELS}"
      app:layout_constrainedHeight="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/action_bar">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_lg"
        android:paddingTop="@dimen/space_lg"
        android:paddingEnd="@dimen/space_lg"
        android:paddingBottom="@dimen/space_xl"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
          android:id="@+id/instructions"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:text="@string/closeall_instructions"
          app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
          android:id="@+id/regular_close_radio"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_lg"
          android:checked="@={!model.forceClose}"
          app:layout_constraintTop_toBottomOf="@id/instructions"
          android:text="@string/closeall_regular_close_label" />

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/address_layout"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_marginTop="@dimen/space_xs"
          android:layout_height="wrap_content"
          android:visibility="@{!model.forceClose}"
          android:alpha="@{model.state == ClosingChannelsState.READY ? 1f : 0.4f}"
          android:hint="@string/closeall_hint"
          android:textColorHint="?attr/colorPrimary"
          app:layout_constraintTop_toBottomOf="@id/regular_close_radio">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/address_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorPrimary"
            android:enabled="@{model.state == ClosingChannelsState.READY}"
            android:inputType="textVisiblePassword|textNoSuggestions"
            app:layout_constraintTop_toBottomOf="@id/message" />
        </com.google.android.material.textfield.TextInputLayout>

        <RadioButton
          android:id="@+id/force_close_radio"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:checked="@={model.forceClose}"
          android:layout_marginTop="@dimen/space_md"
          app:layout_constraintTop_toBottomOf="@id/address_layout"
          android:text="@string/closeall_force_close_label" />

        <TextView
          android:id="@+id/force_close_disclaimer"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_xs"
          android:background="@drawable/rounded_sm"
          android:backgroundTint="?attr/defaultMutedBackgroundColor"
          android:padding="@dimen/space_sm"
          android:text="@string/closeall_force_close_disclaimer"
          android:textSize="@dimen/text_md"
          android:visibility="@{model.forceClose}"
          app:layout_constraintTop_toBottomOf="@id/force_close_radio" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_lg"
          android:drawableStart="@drawable/ic_alert_triangle"
          android:text="@string/closeall_message_error"
          android:visibility="@{model.state == ClosingChannelsState.ERROR}"
          app:layout_constraintTop_toBottomOf="@id/force_close_disclaimer" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_lg"
          android:background="@drawable/rounded"
          android:backgroundTint="@color/green"
          android:drawableStart="@drawable/ic_check"
          android:drawablePadding="@dimen/space_sm"
          android:drawableTint="?attr/altTextColor"
          android:padding="@dimen/space_md"
          android:text="@string/closeall_message_done"
          android:textColor="?attr/altTextColor"
          android:visibility="@{model.state == ClosingChannelsState.DONE}"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/force_close_disclaimer" />

        <fr.acinq.eclair.phoenix.utils.customviews.ProgressTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_lg"
          android:background="@drawable/rounded_border"
          android:padding="@dimen/space_md"
          android:visibility="@{model.state == ClosingChannelsState.IN_PROGRESS}"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/force_close_disclaimer"
          app:text="@string/closeall_message_in_progress" />

        <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
          android:id="@+id/confirm_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/space_lg"
          android:visibility="@{model.state == ClosingChannelsState.READY}"
          app:icon="@drawable/ic_check_circle"
          app:icon_tint="@color/green"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/force_close_disclaimer"
          app:text="@string/btn_confirm" />

      </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
