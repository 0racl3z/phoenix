<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="fr.acinq.eclair.phoenix.settings.SeedSecurityViewModel.ProtectionUpdateState" />

    <import type="fr.acinq.eclair.phoenix.settings.SeedSecurityViewModel.ProtectionState" />

    <variable
      name="model"
      type="fr.acinq.eclair.phoenix.settings.SeedSecurityViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".settings.SeedSecurityFragment">

    <fr.acinq.eclair.phoenix.utils.customviews.ActionBarView
      android:id="@+id/action_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:text="@string/seedsec_title" />

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constrainedHeight="true"
      app:layout_constraintTop_toBottomOf="@id/action_bar">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/prot_none"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/space_lg"
          android:text="@string/seedsec_prot_none"
          android:visibility="@{model.protectionState == ProtectionState.NONE}"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
          android:id="@+id/prot_pin"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/space_lg"
          android:text="@string/seedsec_prot_pin_only"
          android:visibility="@{model.protectionState == ProtectionState.PIN_ONLY}"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
          android:id="@+id/prot_pin_and_bio"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/space_lg"
          android:text="@string/seedsec_prot_pin_and_bio"
          android:visibility="@{model.protectionState == ProtectionState.PIN_AND_BIOMETRICS}"
          app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
          android:id="@+id/head_barrier"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:barrierDirection="bottom"
          app:constraint_referenced_ids="prot_none,prot_pin,prot_pin_and_bio" />

        <View
          android:id="@+id/sep_pin_update"
          style="@style/HLineSeparator"
          app:layout_constraintTop_toBottomOf="@id/head_barrier" />

        <fr.acinq.eclair.phoenix.utils.customviews.ButtonView
          android:id="@+id/set_pin_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/button_bg_square"
          app:enableOrFade="@{model.protectionUpdateState == ProtectionUpdateState.IDLE}"
          app:hz_bias="0"
          app:icon="@drawable/ic_shield"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/sep_pin_update"
          app:text="@string/seedsec_setup_pin" />

        <View
          android:id="@+id/sep_biometrics"
          style="@style/HLineSeparator"
          app:layout_constraintTop_toBottomOf="@id/set_pin_button" />

        <fr.acinq.eclair.phoenix.utils.customviews.SwitchView
          android:id="@+id/biometrics_checkbox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:enableOrFade="@{model.protectionUpdateState == ProtectionUpdateState.IDLE}"
          app:icon="@drawable/ic_fingerprint"
          app:layout_constraintTop_toBottomOf="@id/sep_biometrics"
          app:text="@string/seedsec_prot_biometrics_button" />

        <TextView
          android:id="@+id/error"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="@dimen/space_md"
          android:drawableStart="@drawable/ic_alert_triangle"
          android:visibility="@{model.protectionUpdateState == ProtectionUpdateState.ERROR}"
          app:layout_constraintTop_toBottomOf="@id/sep_pin_update" />

<!--        <fr.acinq.eclair.phoenix.utils.customviews.ProgressTextView-->
<!--          android:layout_width="wrap_content"-->
<!--          android:layout_height="wrap_content"-->
<!--          android:layout_marginTop="@dimen/space_lg"-->
<!--          android:visibility="@{model.newPinInProgress}"-->
<!--          app:layout_constrainedWidth="true"-->
<!--          app:layout_constraintEnd_toEndOf="parent"-->
<!--          app:layout_constraintHorizontal_bias="0"-->
<!--          app:layout_constraintStart_toStartOf="parent"-->
<!--          app:layout_constraintTop_toBottomOf="@id/sep"-->
<!--          app:text="@string/seedsec_wait" />-->

      </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
