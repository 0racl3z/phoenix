<resources>

  <style name="default_theme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- colors definition -->
    <item name="colorPrimary">@color/salmon</item>
    <item name="colorPrimaryDark">@color/transparent</item>
    <item name="colorAccent">@color/blue</item>

    <item name="defaultBackgroundColor">@color/white</item>
    <item name="defaultMutedBackgroundColor">@color/athens</item>
    <item name="defaultErrorBackgroundColor">@color/blossom</item>

    <item name="defaultButtonColor">@color/mystic</item>
    <item name="defaultRippleColor">@color/ripple</item>

    <item name="defaultTextColor">@color/dark</item>
    <item name="defaultMutedTextColor">@color/casper</item>
    <item name="defaultErrorTextColor">@color/brandy</item>
    <item name="defaultMutedErrorTextColor">@color/blossom</item>
    <item name="altMutedBackgroundColor">@color/geyser</item>
    <item name="altBackgroundColor">?attr/colorPrimary</item>
    <item name="altTextColor">@color/white</item>

    <!-- background -->
    <item name="android:colorBackground">?attr/defaultBackgroundColor</item>
    <item name="android:windowBackground">@drawable/app_bg_default</item>

    <!-- text -->
    <item name="android:textColor">?attr/defaultTextColor</item>
    <item name="android:textSize">@dimen/text_lg</item>

    <!-- controls -->
    <item name="colorControlNormal">?attr/defaultMutedTextColor</item>
    <item name="colorControlActivated">?attr/colorPrimary</item>

    <!-- widget overrides -->
    <item name="notifButtonStyle">@style/default_notifButtonStyle</item>
    <item name="actionBarViewStyle">@style/default_actionBar</item>
    <item name="buttonViewStyle">@style/default_buttonStyle</item>
    <item name="android:spinnerItemStyle">@style/default_textAppearance</item>
    <item name="android:textViewStyle">@style/paragraph_textViewStyle</item>
    <item name="android:buttonStyle">@style/default_buttonStyle</item>
    <item name="android:dialogTheme">@style/default_dialogTheme</item>
    <item name="android:checkboxStyle">@style/default_checkboxStyle</item>

    <!-- status bar -->
    <item name="android:statusBarColor">?attr/altMutedBackgroundColor</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="default_textAppearance" parent="TextAppearance.AppCompat.Body1">
    <item name="android:textSize">@dimen/text_lg</item>
    <item name="android:textColor">?attr/defaultTextColor</item>
    <item name="android:textStyle">normal</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:letterSpacing">0.035</item>
  </style>

  <style name="default_actionBar" parent="default_textAppearance">
    <item name="android:background">?attr/defaultMutedBackgroundColor</item>
  </style>

  <style name="default_textAppearance_alt" parent="default_textAppearance">
    <item name="android:textColor">?altTextColor</item>
  </style>

  <!-- Widgets overrides -->

  <style name="paragraph_textViewStyle" parent="default_textAppearance">
    <item name="android:drawablePadding">@dimen/space_md</item>
    <item name="android:gravity">start|center</item>
    <item name="android:lineSpacingMultiplier">1.1</item>
  </style>

  <style name="paragraph_textViewStyle_alt" parent="paragraph_textViewStyle">
    <item name="android:textColor">?altTextColor</item>
  </style>

  <style name="default_buttonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:gravity">start|center</item>
    <item name="android:paddingTop">@dimen/space_sm_p</item>
    <item name="android:paddingBottom">@dimen/space_sm_p</item>
    <item name="android:paddingLeft">@dimen/space_md</item>
    <item name="android:paddingRight">@dimen/space_md</item>
    <item name="android:background">@drawable/button_bg</item>
    <item name="android:textAppearance">@style/default_textAppearance</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="default_notifButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:gravity">start|center</item>
    <item name="android:paddingTop">@dimen/space_sm</item>
    <item name="android:paddingBottom">@dimen/space_sm</item>
    <item name="android:paddingLeft">@dimen/space_sm</item>
    <item name="android:paddingRight">@dimen/space_sm</item>
    <item name="android:background">@drawable/button_bg_square</item>
    <item name="android:textSize">@dimen/text_sm</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="default_virtualKeyboardKeyStyle" parent="default_buttonStyle">
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:paddingTop">@dimen/space_sm</item>
    <item name="android:paddingBottom">@dimen/space_md</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:textColor">@drawable/button_virtual_key_text</item>
    <item name="android:background">@drawable/button_virtual_key_bg</item>
    <item name="android:hapticFeedbackEnabled">true</item>
    <item name="android:textSize">@dimen/text_xl</item>
  </style>

  <style name="default_dialogTheme" parent="@style/Theme.MaterialComponents.Light.Dialog">
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@drawable/rounded</item>
    <item name="android:windowFullscreen">false</item>
    <item name="android:windowCloseOnTouchOutside">false</item>
    <item name="android:textViewStyle">@style/default_textAppearance</item>
    <item name="buttonStyle">@style/default_buttonStyle</item>
  </style>

  <style name="dialog_fullScreen" parent="default_dialogTheme">
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="default_checkboxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
    <item name="android:textColor">?attr/defaultTextColor</item>
    <item name="android:textSize">@dimen/text_lg</item>
    <item name="android:buttonTint">?attr/defaultTextColor</item>
  </style>

  <style name="default_spinnerStyle">
    <item name="android:background">@drawable/spinner_bg</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:padding">0dp</item>
    <item name="android:paddingStart">4dp</item>
    <item name="android:paddingEnd">22dp</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">6dp</item>
    <item name="android:spinnerMode">dialog</item>
  </style>

  <!-- ///////////// special styles ///////////// -->

  <style name="HLineMutedSeparator">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">?attr/defaultMutedBackgroundColor</item>
  </style>

  <style name="HLineSeparator">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">?attr/defaultButtonColor</item>
  </style>

  <style name="VSeparator" parent="HLineSeparator">
    <item name="android:layout_width">1dp</item>
    <item name="android:layout_height">0dp</item>
  </style>

  <style name="HSeparator" parent="HLineSeparator">
    <item name="android:layout_width">50dp</item>
  </style>

  <style name="MutedLabelView" parent="default_textAppearance">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">?attr/defaultMutedTextColor</item>
    <item name="android:textSize">@dimen/text_sm</item>
  </style>

  <style name="TechnicalsBaseView" parent="default_textAppearance">
    <item name="android:paddingStart">@dimen/space_md</item>
    <item name="android:paddingTop">@dimen/space_md</item>
    <item name="android:paddingBottom">@dimen/space_md</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">?attr/defaultTextColor</item>
  </style>

  <style name="TechnicalsLabelView" parent="TechnicalsBaseView">
    <item name="android:layout_width">140dp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="TechnicalsValueView" parent="TechnicalsBaseView">
    <item name="android:paddingEnd">@dimen/space_md</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:textIsSelectable">true</item>
    <item name="android:layout_gravity">fill</item>
  </style>

  <style name="PinButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:layout_width">@dimen/pin_button_size</item>
    <item name="android:layout_height">@dimen/pin_button_size</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_margin">@dimen/space_xs</item>
    <item name="android:hapticFeedbackEnabled">true</item>
    <item name="android:textColor">?attr/defaultTextColor</item>
    <item name="android:textSize">20sp</item>
    <item name="android:background">@drawable/button_pin</item>
  </style>

  <!-- DARK THEME -->

  <style name="dark_theme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- colors definition -->
    <item name="colorPrimary">@color/salmon</item>
    <item name="colorPrimaryDark">@color/transparent</item>
    <item name="colorAccent">@color/blue</item>

    <item name="defaultBackgroundColor">@color/dark</item>
    <item name="defaultMutedBackgroundColor">@color/mako</item>
    <item name="defaultErrorBackgroundColor">@color/chico</item>

    <item name="defaultButtonColor">@color/mako</item>
    <item name="defaultRippleColor">@color/slate</item>

    <item name="defaultTextColor">@color/white</item>
    <item name="defaultMutedTextColor">@color/shuttle</item>
    <item name="defaultErrorTextColor">@color/brandy</item>
    <item name="defaultMutedErrorTextColor">@color/chico</item>
    <item name="altMutedBackgroundColor">@color/yellow</item>
    <item name="altBackgroundColor">?attr/colorPrimary</item>
    <item name="altTextColor">@color/dark</item>

    <!-- background -->
    <item name="android:colorBackground">?attr/defaultBackgroundColor</item>
    <item name="android:windowBackground">@drawable/app_bg_default</item>

    <!-- text -->
    <item name="android:textColor">?attr/defaultTextColor</item>
    <item name="android:textSize">@dimen/text_lg</item>

    <!-- controls -->
    <item name="colorControlNormal">?attr/defaultMutedTextColor</item>
    <item name="colorControlActivated">?attr/colorPrimary</item>

    <!-- widget overrides -->
    <item name="notifButtonStyle">@style/default_notifButtonStyle</item>
    <item name="actionBarViewStyle">@style/default_actionBar</item>
    <item name="buttonViewStyle">@style/default_buttonStyle</item>
    <item name="android:spinnerItemStyle">@style/default_textAppearance</item>
    <item name="android:textViewStyle">@style/paragraph_textViewStyle</item>
    <item name="android:buttonStyle">@style/default_buttonStyle</item>
    <item name="android:dialogTheme">@style/default_dialogTheme</item>
    <item name="android:checkboxStyle">@style/default_checkboxStyle</item>

    <!-- status bar -->
    <item name="android:statusBarColor">?attr/altMutedBackgroundColor</item>
    <item name="android:windowLightStatusBar">true</item>

  </style>

</resources>
