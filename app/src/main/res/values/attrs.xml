<resources>

  <attr name="actionBarViewStyle" format="reference" />
  <attr name="buttonViewStyle" format="reference" />
  <attr name="notifButtonStyle" format="reference" />
  <declare-styleable name="default_theme">
    <attr name="buttonViewStyle" />
  </declare-styleable>

  <attr name="defaultBackgroundColor" format="reference" />
  <attr name="defaultMutedBackgroundColor" format="reference" />
  <attr name="defaultErrorBackgroundColor" format="reference" />

  <attr name="defaultButtonColor" format="reference" />
  <attr name="defaultRippleColor" format="reference" />
  <attr name="contrastedRippleColor" format="reference" />

  <attr name="defaultTextColor" format="reference" />
  <attr name="defaultMutedTextColor" format="reference" />
  <attr name="defaultTextColorOnMutedBackground" format="reference" />
  <attr name="defaultErrorTextColor" format="reference" />
  <attr name="defaultMutedErrorTextColor" format="reference" />

  <attr name="altMutedBackgroundColor" format="reference" />
  <attr name="altBackgroundColor" format="reference" />
  <attr name="altTextColor" format="reference" />

  <attr name="text" format="string" />
  <attr name="text_color" format="color" />
  <attr name="text_size" format="dimension" />
  <attr name="icon" format="reference" />
  <attr name="icon_tint" format="color" />
  <attr name="icon_size" format="dimension" />

  <declare-styleable name="ProgressTextView">
    <attr name="text" />
    <attr name="text_color" />
    <attr name="text_size" />
    <attr name="progress_tint" format="color" />
  </declare-styleable>
  <declare-styleable name="CoinView">
    <attr name="force_btc" format="boolean" />
    <attr name="amount_size" format="dimension" />
    <attr name="amount_color" format="color" />
    <attr name="thin" format="boolean" />
    <attr name="unit" format="string" />
    <attr name="unit_size" format="dimension" />
    <attr name="unit_color" format="color" />
    <attr name="editable" format="boolean" />
    <attr name="hint" format="reference" />
  </declare-styleable>
  <declare-styleable name="ButtonView">
    <attr name="text" />
    <attr name="text_color" />
    <attr name="text_size" />
    <attr name="icon" />
    <attr name="icon_tint" />
    <attr name="icon_size" />
    <attr name="spacer_size" format="dimension" />
    <attr name="hz_bias" format="float" />
  </declare-styleable>
  <declare-styleable name="SwitchView">
    <attr name="text" />
    <attr name="text_color" />
    <attr name="text_size" />
    <attr name="icon" />
    <attr name="icon_tint" />
    <attr name="icon_size" />
  </declare-styleable>
  <declare-styleable name="ActionBarView">
    <attr name="title" format="string" />
    <attr name="subtitle" format="string" />
  </declare-styleable>
</resources>
