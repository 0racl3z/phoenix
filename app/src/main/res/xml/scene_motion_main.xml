<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <Transition
    app:constraintSetEnd="@id/collapsed"
    app:constraintSetStart="@id/expanded">

    <OnSwipe
      app:dragDirection="dragUp"
      app:touchAnchorId="@id/payment_list"
      app:touchAnchorSide="top" />

    <!--<KeyFrameSet>-->
    <!--<KeyAttribute-->
    <!--android:scaleX="1.0"-->
    <!--android:scaleY="1.0"-->
    <!--app:framePosition="60"-->
    <!--app:target="@id/balance" />-->
    <!--<KeyAttribute-->
    <!--android:scaleX="0.5"-->
    <!--android:scaleY="0.5"-->
    <!--app:framePosition="90"-->
    <!--app:target="@id/balance" />-->
    <!--</KeyFrameSet>-->
  </Transition>

  <ConstraintSet android:id="@+id/expanded">
    <Constraint
      android:id="@id/top_section"
      android:layout_height="@dimen/balance_default_height"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <Constraint
      android:id="@id/top_limiter"
      android:layout_width="0dp"
      android:layout_height="1dp"
      app:layout_constraintTop_toBottomOf="@id/balance"
      app:layout_constraintBottom_toBottomOf="@id/top_section"
      android:alpha="0" />

    <Constraint
      android:id="@id/balance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="@id/top_section"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/top_section">
      <!--<CustomAttribute-->
      <!--app:attributeName="whateverSize"-->
      <!--app:customFloatValue="10" />-->
      <CustomAttribute
        app:attributeName="amountSize"
        app:customFloatValue="48" />
      <CustomAttribute
        app:attributeName="unitSize"
        app:customFloatValue="22" />
    </Constraint>
  </ConstraintSet>

  <ConstraintSet android:id="@+id/collapsed">
    <Constraint
      android:id="@id/top_section"
      android:layout_height="@dimen/balance_min_height"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <Constraint
      android:id="@id/top_limiter"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      app:layout_constraintBottom_toBottomOf="@id/top_section"
      android:alpha="1" />

    <Constraint
      android:id="@id/balance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/space_lg"
      app:layout_constraintBottom_toBottomOf="@id/top_section"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">
      <CustomAttribute
        app:attributeName="amountSize"
        app:customFloatValue="38" />
      <CustomAttribute
        app:attributeName="unitSize"
        app:customFloatValue="20" />
    </Constraint>

  </ConstraintSet>

</MotionScene>
